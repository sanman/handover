%h2
  = @task.name
  %h2
    %h3
      Are you sure you want to delete this task?
      %h3
        %form{:action => "/task/#{@task.id}", :method => "post"}
          %input{:name => "_method", :type => "hidden", :value => "delete"}/
          %input{:type => "submit", :value => "Delete"}/
          or
          %a{:href => "/tasks"} Cancel
